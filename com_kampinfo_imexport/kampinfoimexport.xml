<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
 
        <name>KampInfo Im/Export</name>

        <creationDate>September 2015</creationDate>
        <author>Martijn Donath</author>
        <authorEmail>martijn.donath@scouting.nl</authorEmail>
        <copyright>(C) Martijn Donath / HIT Scouting Nederland</copyright>
        <license>LGPL</license>
        <!--  The version string is recorded in the components table -->
        <version>0.1.0</version>
        <!-- The description is optional and defaults to the name -->
        <description>Import en export module voor KampInfo</description>
 
        <administration>
                <!-- Administration Menu Section -->
                <menu>KampInfo im/export</menu>

                <!-- Administration Main File Copy Section -->
                <!-- Note the folder attribute: This attribute describes the folder
                        to copy FROM in the package to install therefore files copied
                        in this section are copied from /admin/ in the package -->
                <files folder="admin">
                        <!-- Admin Main File Copy Section -->
                        <filename>index.html</filename>
                        <filename>kampinfoimexport.php</filename>
                        <filename>controller.php</filename>
                        <folder>views</folder>
                        <folder>models</folder>
                        <folder>controllers</folder>
                        <folder>tables</folder>
                </files>
 
        </administration>
 
</extension>
